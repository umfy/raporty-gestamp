                if (raport.usersMissing.length != 0)
                  each user in raport.usersMissing
                    tr
                      td #{user.name}
                      td #{user.surname}
                      td #{user.spec}
                      td
                        div(class='form-check') 
                          input(class="form-check-input" type="checkbox" name=user._id value=1 id=user._id checked=false)


