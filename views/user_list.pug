extends layout

block content
   div(class="col mx-md-5 my-5")
      h1.text-center.mb-5= title

      a.btn.btn-primary.my-2(href="/api/user/create") Dodaj Pracownika
      table.table.table-bordered.table-striped.table-hover.dark-header-hover
         thead.table-dark
            tr
               th ImiÄ™
               th Nazwisko
               th Specjalizacja
         tbody 
            each user in user_list
               tr
                  td.padding0
                     a.black-link(href=user.url) #{user.name}
                  td.padding0
                     a.black-link(href=user.url) #{user.surname}
                  td.padding0
                     a.black-link(href=user.url) #{user.spec}
            else
               li There are no users.
